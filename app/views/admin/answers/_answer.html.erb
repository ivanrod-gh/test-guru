<div class="row table-border">
  <div class="col-md-8 table-border" align="left">
    <%= answer.body %>
  </div>
  <div class="col-md-4 table-border">
    <div class="row">
      <div class="col-md-4" align="center">
        <%= link_to t('admin.author_actions.watch'), admin_answer_path(answer), method: :get %>
      </div>
      <div class="col-md-4" align="center">
        <%= link_to t('admin.author_actions.edit'), edit_admin_answer_path(answer), method: :get %>
      </div>
      <div class="col-md-4" align="center">
        <%= link_to t('admin.author_actions.delete'), admin_answer_path(answer), method: :delete, data: { confirm: t('admin.author_actions.delete_confirmation')}, style: "color: red" %>
      </div>
    </div>
  </div>
</div>
