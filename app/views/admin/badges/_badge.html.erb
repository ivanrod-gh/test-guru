<div class="row table-border">
  <div class="col-md-4 table-border">
    <%= badge.title %>
  </div>
  <div class="col-md-4 table-border" align="center">
    <img src="<%= badge.picture %>">
  </div>
  <div class="col-md-4 table-border">
    <div class="row">
      <div class="col-md-4 col-4" align="center">
        <%= link_to t('admin.author_actions.watch'), admin_badge_path(badge), method: :get %>
      </div>
      <div class="col-md-4 col-4" align="center">
        <%= link_to t('admin.author_actions.edit'), edit_admin_badge_path(badge), method: :get %>
      </div>
      <div class="col-md-4 col-4" align="center">
        <%= link_to t('admin.author_actions.delete'), admin_badge_path(badge), method: :delete, data: { confirm: t('.delete_confirmation') }, style: "color: red;" %>
      </div>
    </div>
  </div>
</div>
