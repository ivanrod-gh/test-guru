  <div class="table-large-style">
    <div class="table-row-style">
      <div class="table-flexible-column-style"><%= test.title %></div>
      <div class="table-constant-tests-column-style" align="center">
        <%= test.questions.count %>
      </div>
      <div class="table-constant-tests-column-style" align="center">
        <table>
          <tr>
            <td><%= button_to t('.start'), start_test_path(test), method: :post %></td>
          </tr>
        </table>
      </div>
      <div class="table-constant-actions-column-style" align="center">
        <table>
          <tr>
            <td><%= button_to t('admin.author_actions.watch'), admin_test_path(test), method: :get, params: { lang: params[:lang] } %></td>
            <td><%= button_to t('admin.author_actions.edit'), edit_admin_test_path(test), method: :get, params: { lang: params[:lang] } %></td>
            <td><%= button_to t('admin.author_actions.delete'), admin_test_path(test), method: :delete, data: { confirm: t('.delete_confirmation')}, style: "color: red" %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
