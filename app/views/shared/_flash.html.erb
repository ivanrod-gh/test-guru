<div class="flash-push" align="center">
  <% flash.each do |key, message| %>
    <% if key == "alert" %>
      <%= content_tag :p, message, class: "alert alert-danger" %>
    <% elsif key == "notice" %>
      <%= content_tag :p, message, class: "alert alert-primary" %>
    <% elsif key == "notice_html" %>
      <%= content_tag :p, message.html_safe, class: "alert alert-primary" %>
    <% else %>
      <%= content_tag :p, message, class: "alert alert-dark" %>
    <% end %>
  <% end %>
</div>
