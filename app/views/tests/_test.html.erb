  <div class="table-large-style">
    <div class="table-row-style">
      <div class="table-flexible-column-style"><%= test.title %></div>
      <div class="table-constant-tests-column-style" align="center">
        <%= test.questions.count %>
      </div>
      <div class="table-constant-tests-column-style" align="center">
        <table>
          <tr>
            <td><%= button_to 'Начать', start_test_path(test), method: :post %></td>
          </tr>
        </table>
      </div>
      <div class="table-constant-actions-column-style" align="center">
        <table>
          <tr>
            <td><%= button_to "Просмотреть", test_path(test), method: :get %></td>
            <td><%= button_to 'Редактировать', edit_test_path(test), method: :get %></td>
            <td><%= button_to "Удалить", test_path(test), method: :delete, data: { confirm: 'Вы уверены? Это действие безвозвратно удалит весь тест!'}, style: "color: red" %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
